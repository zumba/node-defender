doctype 5
html(lang=en)
	head
		title Node Defender
		meta(name="viewport", content="width=device-width, initial-scale=1")
		link(href="//fonts.googleapis.com/css?family=Press+Start+2P|Merriweather+Sans:400,700|Open+Sans", rel="stylesheet", type="text/css")
		link(href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css", rel="stylesheet", type="text/css")
		link(href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css", rel="stylesheet", type="text/css")
		link(href="/css/style.css", rel="stylesheet", type="text/css")
		script.
			var host = '#{host}';
	body
		header
			.container
				h1
					i.icon-html5 
					span Node Defender
					ul.nav.nav-pills.pull-right
						li: a.btn.btn-info(href="/how-to-play") How to Play
						li: a.btn.btn-info(href="/ude2013") UDE 2013
						li: a.btn.btn-warning.pull-right(href="/logout") Logout
		.main
			.container
				block content
		footer
			.container
				.row
					.col-lg-12
						a(href="http://engineering.zumba.com") 
							img(src="//www.zumba.com/img/logo.png")
						p.pull-right.ps2p-small &copy; 2013 Zumba Fitness, LLC. All rights reserved.
		a.hidden-xs(href="https://github.com/zumba/node-defender")
			img(style="position: absolute; top: 0; left: 0; border: 0;" src="https://s3.amazonaws.com/github/ribbons/forkme_left_orange_ff7600.png", alt="Fork me on GitHub")

		script(src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js")
		script(src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.5.2/underscore-min.js")
		script(src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js")
		if gaAccount
			script.
				(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
				(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
				m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
				})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
				ga('create', '#{gaAccount}');
				ga('send', 'pageview');
		block scripts
